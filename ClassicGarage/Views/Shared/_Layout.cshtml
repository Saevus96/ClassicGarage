@using Microsoft.AspNet.Identity
<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title — moja aplikacja platformy ASP.NET</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/styl1.css")
    @Styles.Render("~/Content/navbar.css")
    @Scripts.Render("~/bundles/modernizr")


</head>
<body>
    <div class="navbar  bg-primary navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">

                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>

                </button>
                @Html.ActionLink("Classic Garage", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })

            </div>
            <div class="navbar-collapse collapse">

                <ul class="nav navbar-nav">
                    
                    <li>@Html.ActionLink("Ogloszenia", "Index", "AdvertismentModels", new { area = "" }, new { @class = "navbar-item" })</li>
                    <li>@Html.ActionLink("Wszystkie samochody w bazie", "Index", "CarModels", new { area = "" }, new { @class = "navbar-item" })</li>
                    <li>@Html.ActionLink("Wszystkie części w bazie", "Wszystkieczesci", "PartsModels", new { area = "" }, new { @class = "navbar-item" })</li>
                    <li>@Html.ActionLink("Kontakt", "Contact", "Home", new { area = "" }, new { @class = "navbar-item" })</li>

                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    @if (Request.IsAuthenticated)
    {
    <button class="side-menu-trigger">Panel Użytkownika</button>
    <aside class="side-menu" style="z-index: 1;">
        <ul>
            <li>@Html.ActionLink("Moje Samochody", "MojeSamochody", "CarModels", new { area = "" }, new { @class = "navbar-item" })</li>
            <li>@Html.ActionLink("Moje Ogłoszenia", "MojeOgloszenia", "AdvertismentModels", new { area = "" }, new { @class = "navbar-item" })</li>
            <li>@Html.ActionLink("Historie napraw moich samochodów", "Index", "RepairsModels", new { area = "" }, new { @class = "navbar-item" })</li>
            <li>@Html.ActionLink("Moje części", "Index", "PartsModels", new { area = "" }, new { @class = "navbar-item" })</li>
            <li>@Html.ActionLink("Moje dane", "Index", "OwnerModels", new { area = "" }, new { @class = "navbar-item" })</li>

        </ul>
    </aside>
    }
    <div class="container body-content">
        @RenderBody()

        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year — Konrad Chlewski</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
